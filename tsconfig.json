{
  "compilerOptions": {
    "target": "ES2020",                          // Especifica la versión de JavaScript a la que se compilará el código
    "module": "commonjs",                        // Especifica el sistema de módulos utilizado
    "lib": ["ES2020"],                           // Incluye las declaraciones de biblioteca necesarias
    "allowJs": true,                             // Permite compilar archivos JavaScript
    "outDir": "./dist",                          // Directorio de salida para los archivos compilados
    "rootDir": "./src",                          // Directorio raíz de los archivos fuente
    "strict": true,                              // Habilita todas las comprobaciones de tipo estrictas
    "noImplicitAny": true,                       // No permite variables de tipo any implícitas
    "strictNullChecks": true,                    // Permite detectar valores null y undefined en tiempo de compilación
    "strictPropertyInitialization": true,        // Asegura la inicialización correcta de propiedades en clases
    "noImplicitReturns": true,                   // Asegura que todas las rutas de código en una función devuelvan un valor
    "noUnusedLocals": true,                      // Detecta variables locales no utilizadas
    "noUnusedParameters": true,                  // Detecta parámetros no utilizados
    "moduleResolution": "node",                  // Especifica el mecanismo para resolver módulos
    "esModuleInterop": true,                     // Habilita la interoperabilidad entre CommonJS y ES Modules
    "resolveJsonModule": true,                   // Permite importar archivos JSON directamente
    "emitDecoratorMetadata": true,               // Para soporte de decoradores (necesario para sequelize-typescript)
    "experimentalDecorators": true,              // Para soporte de decoradores (necesario para sequelize-typescript)
    "skipLibCheck": true,                        // Omite la comprobación de tipo de los archivos de declaración
    "forceConsistentCasingInFileNames": true     // Asegura que los nombres de archivo sean tratados de forma coherente
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
